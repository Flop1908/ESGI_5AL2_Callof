<Window x:Class="Wpf.Game.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" WindowState="Maximized" Height="611.119">

	<DockPanel>
		<TextBlock DockPanel.Dock="Left" Background="BlanchedAlmond" Width="250" Margin="0,0,0,0" TextAlignment="Center">
				
				<StackPanel Width="248" Height="581">
					<Label HorizontalAlignment="Center">PARAMETRES</Label>
					<StackPanel>
						<Label HorizontalAlignment="Center" Margin="10">Simulation :</Label>
						<RadioButton GroupName="Simulation" Content="Deplacement" IsChecked="True" Name="rb_deplacement"/>
						<RadioButton GroupName="Simulation" Content="Labyrinthe" Name="rb_labyrinthe" />
						<RadioButton GroupName="Simulation" Content="Personalisée" Name="rb_perso"/>
					</StackPanel>
					<StackPanel>
						<Label HorizontalAlignment="Center" Margin="10">Point de vie :</Label>
						<RadioButton GroupName="PointDeVie" Content="Hasard" IsChecked="True" Name="rb_pdv_hasard"/>
						<RadioButton GroupName="PointDeVie" Content="Identique pour tous" Name="rb_pdv_identique" /><TextBox Width="30" HorizontalAlignment="Left" Name="tb_pdv"></TextBox>
						<RadioButton GroupName="PointDeVie" Content="Defaut" Name="rb_pdv_defaut"/>
					</StackPanel>
					<StackPanel>
						<Label HorizontalAlignment="Center" Margin="10">Positionnement :</Label>
						<RadioButton GroupName="Positionnement" Content="Hasard" IsChecked="True" Name="rb_pos_hasard"/>
						<RadioButton GroupName="Positionnement" Content="Identique pour tous" Name="rb_pos_identique" /> 
						<RadioButton GroupName="Positionnement" Content="Defaut" Name="rb_pos_defaut"/>
					</StackPanel>
					<StackPanel>
						<Label HorizontalAlignment="Center" Margin="10">Objectif :</Label>
						<RadioButton GroupName="Objectif" Content="Hasard" IsChecked="True" Name="rb_obj_hasard"/>
						<RadioButton GroupName="Objectif" Content="Identique pour tous" Name="rb_obj_identique" />
						<RadioButton GroupName="Objectif" Content="Defaut" Name="rb_obj_defaut"/>
					</StackPanel>
					<StackPanel>
						<Label HorizontalAlignment="Center" Margin="10">Strategie :</Label>
						<RadioButton GroupName="Strategie" Content="Hasard" IsChecked="True" Name="rb_str_hasard"/>
						<RadioButton GroupName="Strategie" Content="Identique pour tous" Name="rb_str_identique" />
						<RadioButton GroupName="Strategie" Content="Defaut" Name="rb_str_defaut"/>
					</StackPanel>
					<Button HorizontalAlignment="Center" Content="Chargement" Click="Button_Click"></Button>
				</StackPanel>
				
		</TextBlock>
		<TextBlock TextAlignment="Center">
				<DockPanel Height="505" Width="535">		            
					<TextBlock DockPanel.Dock="Bottom" Height="79" Margin="0,0,0,0">
						<Button Name="BtnNextTurn" HorizontalAlignment="Center" Content="Tour suivant" Margin="0, 20, 0, 0" Click="Button_Click_1"/>
						<LineBreak/>
						<Label Content="Point de Vie : "></Label><Label Name="lbl_vie"></Label>
					</TextBlock>
					<TextBlock Name="PanelContent">
					
						
						<Grid Name="Grid_Game" Width="400" Height="350" Margin="0,60,0,0">
							<Grid.Background>
								<ImageBrush ImageSource="plateau.png"></ImageBrush>
							</Grid.Background>
						
						</Grid>
					</TextBlock>
				</DockPanel>
		</TextBlock>
	</DockPanel>
</Window>
